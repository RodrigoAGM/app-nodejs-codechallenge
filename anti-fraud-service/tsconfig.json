{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                               /* Skip type checking all .d.ts files. */
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "tests/**"
  ]
}
